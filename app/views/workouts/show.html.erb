<div id="workout">
  <p><%= @workout.date.to_s(:long) %></p>
  <p><%= @workout.workout %></p>
  <p><%= @workout.mood %></p>
  <p><%= @workout.length %></p>
</div>

<div id="exercises">
  <h2>Exercises</h2>
  <%= render @workout.exercises %>
  <%# @workout.exercises.each do |exercise| %>
    <%#= render partial: "exercises/exercise", locals: {:exercise => exercise} %>
  <%# end %>

  <h3>Add an exercise</h3>
  <%= render "exercises/form" %>

</div>

<%= link_to "Back", root_path %> |
<%= link_to "Edit", edit_workout_path(@workout) %> |
<%= link_to "Delete", workout_path(@workout), method: :delete %>
