<%= simple_form_for(@workout, class: "form-horizontal") do |f| %>
  <%= f.input :date, label: "Date" %>
  <%= f.input :workout, label: "What ara did you workout?", class: 'form-control'%>
  <%= f.input :mood, label: "How were you feeling", class: 'form-control' %>
  <%= f.input :length, label: "How long was the workout", class: 'form-control' %>
  <br>
  <%= f.submit %>
<% end %>
